<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="MaterialCalendarView">

        <attr name="dateTextAppearance" format="reference"/>
        <attr name="weekDayTextAppearance" format="reference"/>
        <attr name="headerTextAppearance" format="reference"/>

        <attr name="arrowColor" format="color"/>
        <attr name="selectionColor" format="color"/>

        <attr name="showOtherDates" format="boolean"/>

        <attr name="weekDayStyle">
            <enum name="character" value="0"/>
            <enum name="abbreviated" value="1"/>
            <enum name="full" value="2"/>
        </attr>
        <attr name="disabledDays">
            <flag name="none" value="0x00"/>
            <flag name="sunday" value="0x01"/>
            <flag name="monday" value="0x02"/>
            <flag name="tuesday" value="0x04"/>
            <flag name="wednesday" value="0x08"/>
            <flag name="thursday" value="0x10"/>
            <flag name="friday" value="0x20"/>
            <flag name="saturday" value="0x40"/>
        </attr>
    </declare-styleable>

</resources>